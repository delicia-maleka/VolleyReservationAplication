      },
      "MyReservationDTO": {
        "type": "object",
        "properties": {
          "idReservation": {
            "type": "integer",
            "format": "int32"
          },
          "date": {
            "type": "string"
          },
          "terrain": {
            "type": "string"
          },
          "heureDebut": {
            "type": "string"
          },
          "heureFin": {
            "type": "string"
          },
